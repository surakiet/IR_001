<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <View
                    android:layout_width="wrap_content"
                    android:layout_height="71dp" android:id="@+id/tab"
                    app:layout_constraintTop_toTopOf="parent" android:background="@drawable/tabbg"/>
            <View
                    android:layout_width="50dp"
                    android:layout_height="50dp" android:id="@+id/iconleft"
                    android:background="@drawable/iconleft" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="15dp"
                    android:layout_marginStart="8dp"/>
            <TextView
                    android:text="News"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/headtext"
                    app:layout_constraintTop_toTopOf="@id/tab" app:layout_constraintStart_toStartOf="@+id/tab"
                    app:layout_constraintEnd_toEndOf="@+id/tab"
                    android:textColor="#FFFFFF" android:fontFamily="@font/rubik_medium" android:textSize="23sp"
                    android:layout_marginTop="25dp"/>
            <View
                    android:layout_width="40dp"
                    android:layout_height="40dp" android:id="@+id/baricon"
                    android:background="@drawable/ic_action_name" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
                    android:layout_marginEnd="32dp"/>
            <View
                    android:layout_width="wrap_content"
                    android:layout_height="71dp" android:id="@+id/subtab"
                    android:background="#e6e7e8"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tab"/>
            <View
                    android:layout_width="210dp"
                    android:layout_height="63dp" android:id="@+id/butt1"
                    android:background="@drawable/buttonhead"
                    android:layout_marginTop="9dp"
                    app:layout_constraintTop_toTopOf="@+id/subtab" app:layout_constraintStart_toStartOf="@+id/subtab"
                    android:layout_marginStart="25dp"/>
            <TextView
                    android:text="SET Announcements"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/headtitle3" android:textColor="#DF1380"
                    android:fontFamily="@font/rubik"
                    app:layout_constraintStart_toStartOf="@+id/butt1"
                    app:layout_constraintTop_toTopOf="@+id/butt1"
                    android:textSize="19sp"
                    android:layout_marginStart="11dp" android:layout_marginTop="12dp"/>
            <View
                    android:layout_width="159dp"
                    android:layout_height="63dp" android:id="@+id/butt2"
                    android:background="@drawable/buttonhead"
                    android:layout_marginTop="9dp"
                    app:layout_constraintTop_toTopOf="@+id/subtab" app:layout_constraintStart_toStartOf="@+id/subtab"
                    android:layout_marginStart="239dp"/>
            <TextView
                    android:text="Press Release"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/headtitle4" android:textColor="#DF1380"
                    android:fontFamily="@font/rubik"
                    app:layout_constraintStart_toStartOf="@+id/butt2"
                    app:layout_constraintTop_toTopOf="@+id/butt2"
                    android:textSize="19sp"
                    android:layout_marginStart="15dp" android:layout_marginTop="13dp"/>
            <View
                    android:layout_width="143dp"
                    android:layout_height="36dp" android:id="@+id/headtitlebut"
                    android:background="@drawable/headtitleradius"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@id/subtab"/>
            <TextView
                    android:text="SET Announcements"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/headtitle" android:textColor="#DF1380"
                    android:fontFamily="@font/rubik"
                    app:layout_constraintStart_toStartOf="@+id/headtitlebut"
                    app:layout_constraintEnd_toEndOf="@+id/headtitlebut"
                    app:layout_constraintTop_toTopOf="@+id/headtitlebut" android:layout_marginTop="4dp"
                    android:textSize="13sp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/date"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="22dp"
                    android:layout_marginTop="25dp"
                    android:textColor="#404041" android:fontFamily="@font/rubik" android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/subtab"
                    app:layout_constraintEnd_toStartOf="@+id/headtitlebut" android:layout_marginEnd="8dp"
                    android:text="13 Mar 2019"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/bodytext"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="22dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#DF1781" android:fontFamily="@font/rubik_light" android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@+id/date"
                    android:text="asdsffasfkddddddddddddddddddddddddddddddddddddddddddddddddddd"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="22dp"/>
            <View
                    android:layout_width="366dp"
                    android:layout_height="1dp"
                    android:id="@+id/hr"
                    android:background="@android:color/darker_gray" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/bodytext" android:layout_marginTop="16dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>